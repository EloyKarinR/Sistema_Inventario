{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "VERCEL": "1",
    "DJANGO_SETTINGS_MODULE": "SistemaInventario.settings",
    "PYTHONPATH": "/var/task"
  },
  "buildCommand": "bash build.sh"
}
